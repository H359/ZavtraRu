						            site_bg_color: "FFFFFF",
						            header_bg_color: "FEEAC7",
						            title_color: "0000CC",
						            url_color: "006600",
						            text_color: "000000",
						            hover_color: "0066FF",
						            favicon: true
						        });
						    });
						    t = d.documentElement.firstChild;
						    s = d.createElement("script");
						    s.type = "text/javascript";
						    s.src = "http://an.yandex.ru/system/context.js";
