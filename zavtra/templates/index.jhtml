{% extends "base.jhtml" %} {% from "macro.jhtml" import
render_navigation, render_articlest_list_block %} {% block page_header %}
<div class="container">
	<div class="row">
		<div class="span4_5">
			<div class="row">
				<div class="span4_5">
					<div id="main_header_links">
						<a class="main_header_link" href="/content/archive/">Архив
							Завтра</a> <a class="main_header_link" href="http://dentv.ru">День
							ТВ</a> <a class="main_header_link" href="http://denlit.at.ua/">День
							Литературы</a>
					</div>
					<img src="{{STATIC_URL}}img/red_line_gradient.png" class="block">
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="row">
				<div class="span4 center_align">
					<a href="/"> <img src="{{STATIC_URL}}img/logo_white_med.jpg"
						class="block center_align" id="main_zavtra_logo">
					</a>
				</div>
			</div>
		</div>
		<div class="span4_5">
			<div class="row">
				<div class="span4_5 right_align">
					<div id="main_header_login" class="pull-right">
						{% if not request.user or not request.user.is_authenticated() %} <a
							id="main_header_login_link" href="{{url('siteuser.view.login')}}"
							class="main_header_login_link">Вход</a> <span
							class="main_header_login_text"> &bull; </span> <a
							href="{{url('siteuser.view.register')}}"
							class="main_header_login_link">Регистрация</a> {% else %} <a
							href="{{url('siteuser.view.cabinet_subscriptions_articles')}}"
							class="main_header_login_link">Личный кабинет</a> <span
							class="main_header_login_text"> &bull; </span> <a
							class="main_header_login_link"
							href="{{url('siteuser.view.logout')}}?next={{request.path|e}}">Выход</a>
						{% endif %}
					</div>
					<img class="block"
						src="{{STATIC_URL}}img/red_line_gradient_right.png">
				</div>
			</div>
			<div class="row">
				<div class="span4_5">
					<div id="main_header_search">
						<form action="/content/search/" method="get" class="navbar-search">
							<div id="main_search_form">
								<input class="search-query" type="search" name="q"
									placeholder="поиск...">
							</div>
							<div id="main_search_image">
								<button class="trans-button" type="submit">
									<i class="icon-search icon-white middle_align"> </i>
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %} {% block page_line %}
<div id="main_gray_line"></div>
{% endblock %} {% block page_footer %}
<div class="container">
	<div class="row">
		<div class="span13">
			<div class="row">
				<div class="span8">
					<div class="row">
						<div class="span8">
							<div id="footer_navigation">
							{{render_navigation("sub_")}}
								<span class="sub_nav_item">
									<a href="/about/">О нас</a>
								</span>
							</div>
						</div>
					</div>
					<div class="span8">
						<div id="footer_social_networks">
