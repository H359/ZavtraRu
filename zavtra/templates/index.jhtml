{% endblock %}
{% block page_content %}

<div class="container">
	<div class="row">
		<div class="span9">
			<div class="row">
				<div class="relative span3">
					<div class="row">
						<div class="span3" id="events_block">
							<div id="main_events_box">
								<div class="main_upper_boxes_header">
									<h2 class="white">
										<a href="/content/events/" class="no_underline"> <span
											class="main_header_category">События:</span>
										</a>
									</h2>
								</div>
								<div id="main_event_selection_bg"></div>
								<div id="events" class="carousel slide carousel-fast">
									<ol class="carousel-indicators">
										{% for i in range(0, 8) %}
										<li data-target="#events" data-slide-to="{{i}}" {% if
											loop.first %} class="active"{% endif %}></li>
										{% endfor %}
									</ol>
									<div class="carousel-inner">
										{% for event in events %}
										<div class="item{% if loop.first %} active{% endif %}">
											<div class="main_event_image">
												<a href="{{event.get_absolute_url()}}"><img
													src="{{event.cover_for_eventbox.url}}"></a>
											</div>
											<h4>
												<a href="{{event.get_absolute_url()}}"
													class="white white_link">{{event.title}}</a>
											</h4>
										</div>
										{% endfor %}
									</div>
									<a class="carousel-control left" href="#events" data-slide="prev"></a>
  								<a class="carousel-control right" href="#events" data-slide="next"></a>
									<!--<a href="#events" class="carousel-control left" data-slide="prev"></a>
                  <a href="#events" class="carousel-control right" data-slide="next"></a>-->
								</div>
							</div>
						</div>
					</div>
				</div>
				{% set wod = wod_qs.latest('published_at') %}
				<div class="span6" id="wod_block">
					<div id="main_wod_box">
						<div class="main_upper_boxes_header">
							<h2>
								<a href="/content/rubric/wod/" class="no_underline"> <span
									class="main_header_category">Слово Дня:</span>
								</a> <a class="gray gray_link no_underline"
									href="{{wod.get_absolute_url()}}"> <span
									class="main_header_name">{{wod.title}}</span>
								</a>
							</h2>
						</div>
						<div class="text-over-image">
							<a href="{{wod.get_absolute_url()}}"> <img
								id="main_wod_image" src="{{wod.main_cover_for_wod.url}}">
							</a>
							<div id="main_wod_details" class="text-bottom white">
								<h3>
									<a href="{{wod.get_absolute_url()}}">{{wod.subtitle}}</a>
								</h3>
								<h6 class="beige">Экспертные оценки:</h6>
								<span class="block center_align"> {% for expert_comment
									in wod.expert_comments.all() %} <a
									href="{{expert_comment.expert.get_absolute_url()}}"
									class="person_name">{{expert_comment.expert}}</a>{% if not
									loop.last %}, {% endif %} {% endfor %}
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
			{% if latest_news|length > 0 %}
			<div class="row">
				<div class="span9">
					<div id="main_news_box">
						<div id="main_news_box_header">
							<h3>
								<a href="/content/events/" class="no_underline"><span
									class="main_header_category middle_align">Коротко:</span></a>
							</h3>
						</div>
						<div id="main_news_box_content" class="carousel slide carousel-slow">
							<div class="carousel-inner">
								{% for item in latest_news[0:3] %}
								<div class="item{% if loop.first %} active{% endif %}">
									<a href="{{item.get_absolute_url()}}"
										class="largetext middle_align">{{item.title}}</a>
								</div>
								{% endfor %} {% if latest_news|length > 3 %}
								<div class="item">
									<a href="/content/events/" class="largetext middle_align">перейти
										к остальным новостям</a>
								</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
			{% endif %}
			<div class="row" id="navigation_holder">
				<div class="span9" id="navigation_block">
					<div id="main_navigation">{{render_navigation("", "
						nav_item_border")}}</div>
				</div>
			</div>
			<div class="row" id="subjects_holder">
				<div class="span9" id="subjects_block">
					<div id="main_subjects">
						{% for topic in top_topics %} <a
							href="{{topic.get_absolute_url()}}" class="subject_nav_item">{{topic.title}}</a>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="span9">
					<div class="carousel slide carousel-slow">
						<div class="carousel-inner">
							{% for quote in quotes %}
							<div class="quote item{% if loop.first %} active{% endif %}">
								<a style="font-weight: 700;line-height: 1.5em !important;" href="{{quote.source.get_absolute_url()}}" class="no_underline">{{quote.quote}}</a>
							</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			{% if panorams|length > 0 %}
			<div class="row" id="panorams_holder">
				<h1><a href="/content/panoram/">Панорама</a></h1>
				{% for panoram in panorams %}
				<div class="span3">
					<a href="{{panoram.get_absolute_url()}}">
						<img src="{{panoram.main_page_image.url}}" width="200" height="150">
					</a>
					<h3>
						<a href="{{panoram.get_absolute_url()}}">{{panoram.title}}</a>
					</h3>
				</div>
				{% endfor %}
			</div>
			<br>
			{% endif %}
			<div class="row">
				{% for article in selected_articles %}
				<div class="span3">
					<div class="main_article_container">
						<a href="{{article.get_absolute_url()}}"
							class="no_underline bloat"></a> {% if article.cover_source != ""
						%} <img src="{{article.cover_for_main_selection.url}}"
							class="main_article_image"> {% endif %}
						<div class="main_article_header">
							<div class="main_article_author">
								<span class="person_name">{% for author in
									article.authors.all() %}{{author}}{% if not loop.last %}, {%
									endif %}{% endfor %}</span>
							</div>
							<div class="main_article_name">
								<h6>{{article.title}}</h6>
								<div>{{article.subtitle}}</div>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
			<div class="row">
				<div class="span9">
					<div class="span4">
						{{render_articlest_list_block("Авторские страницы", "/authors/", blogs)}}
						<a class="twitter-timeline" href="https://twitter.com/ZavtraRu" data-widget-id="383183522032140288">Твиты пользователя @ZavtraRu</a>
						<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
						<iframe src="http://smi2.ru/data/iframes/gen.v.php?ag=0&bl=75134&h=300&w=300" width="300" height="300" frameborder="0" vspace="0" hspace="0" scrolling="no" marginwidth="0" marginheight="0"></iframe>
					</div>
					<div class="span5">
						{% if spec_project is not none %}
						<div class="main_spec_frame">
							<div class="main_box_header">
								<a href="{{url('content.view.special_projects')}}"><img
									src="{{STATIC_URL}}img/specproekt.png"></a>
								<h3 class="right_align">
									<a href="{{spec_project.get_absolute_url()}}"
										class="beige gray_link">{{spec_project.title}}</a>
								</h3>
							</div>
							<div class="accordion" id="accordion2">
								{% for article in spec_project.articles.all() %}
								<div class="accordion-group">
									<div class="accordion-heading">
										<a class="accordion-toggle" data-toggle="collapse"
											data-parent="#accordion2" href="#collapse-{{loop.index}}"><h4>
												{{article.title}} <i class="icon-chevron-right top_align"></i>
											</h4></a>
									</div>
									<div id="collapse-{{loop.index}}"
										class="accordion-body collapse{% if loop.first %} in{% endif %}">
										<div class="accordion-inner">
											{% if article.cover_source != "" %}
											<img src="{{article.inside_article_cover.url}}" class="img-full-size main_special_project_img">
											<p>{{article.announce|striptags}}</p>
											<h5 class="right_align average_padding_vertical">
												<a href="{{article.get_absolute_url()}}"
													class="brown brown_link">продолжение статьи &gt;</a>
											</h5>
											{% endif %}
										</div>
									</div>
								</div>
								{% endfor %}
							</div>
							<div class="main_box_footer">
								<h5 class="right_align">
									<a href="{{url('content.view.special_projects')}}"
										class="dark dark_link">Другие проекты</a>
								</h5>
							</div>
						</div>
						{% endif %}

						{% set video = video_qs.order_by('-published_at')[0] %}
						<div class="main_box_frame">
							<div class="relative main_box_header">
								<h5>
									<a href="{{video.rubric.get_absolute_url()}}" data-video-source="{{video.source}}" class="gray gray_link">Видео</a>
								</h5>
							</div>
							<div id="main_video_selected">
								<div id="main_video_selected_media">
									<a href="{{video.get_absolute_url()}}" class="no_underline" data-video-source="{{video.source}}">
										{% if video.cover_source != "" %}
										<img src="{{video.cover_for_video.url}}" id="main_video_selected_video">
										{% else %}
										<img src="{{video.external_image}}" id="main_video_selected_video">
										{% endif %}
									</a>
								</div>
								<div id="main_video_selected_header_bg"></div>
								<div id="main_video_selected_header">
									<h6>
										<a href="{{video.get_absolute_url()}}" data-video-source="{{video.source}}" class="white white_link">{{video.title}}</a>
									</h6>
									<div id="main_video_selected_header_stats">
										<i class="icon-white icon-comment"> </i>
										<span class="smalltext"><a
										href="{{video.get_absolute_url()}}#comments" class="gray gray_link">{{video.comments_count|get_plural("комментарий,комментария,комментариев")}}</a></span>
									</div>
									<div id="main_video_selected_header_restriction">
										<span class="smalltext beige">18+</span>
									</div>
								</div>
							</div>
							<div id="main_video_selected_description_container">
								<a href="{{video.get_absolute_url()}}">{{video.announce|striptags}}</a>
							</div>
						</div>

						<!-- Яндекс.Директ -->
						<div id="yandex_ad"></div>
						<script type="text/javascript">
						(function(w, d, n, s, t) {
						    w[n] = w[n] || [];
